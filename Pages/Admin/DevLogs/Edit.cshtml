@page "{id:Guid}"
@model portfolio_web_app.Pages.Admin.DevLogs.EditModel
@{
}


<div class="bg-secondary bg-opacity-10 py-2 mb-5">

	<div class="container">

		<h1> Edit Dev Log </h1>

        
      
	</div>

</div>


@if(Model.devLogPost!=null){
<div>
    <div class="container">
        <form method="post">
            <div class="mb-3">
                <label for="heading" class="form-label">ID:</label>
                <input type="text" class="form-control" id="id" asp-for="devLogPost.id" readonly>
            </div>
            <div class="mb-3">
                <label for="heading" class="form-label">Heading:</label>
                <input type="text" class="form-control" id="heading" asp-for="devLogPost.Heading">
            </div>
            <div class="mb-3">
                <label for="pageTitle" class="form-label">Page Title:</label>
                <input type="text" class="form-control" id="pageTitle" asp-for="devLogPost.PageTitle">
            </div>
            <div class="mb-3">
                <label for="pageContent" class="form-label">Content:</label>
                <textarea class="form-control" id="pageContent" asp-for="devLogPost.Content"></textarea>
            </div> 
            <div class="mb-3">
                <label for="shortDescription" class="form-label">Short Description:</label>
                <input type="text" class="form-control" id="shortDescription" asp-for="devLogPost.ShortDescription">
            </div>
            <div class="mb-3">
                <label for="featuredImage" class="form-label">Featured Image:</label>
                <input type="text" class="form-control" id="featuredImage" asp-for="devLogPost.FeaturedImageUrl">
            </div>
            <div class="mb-3">
                <label for="urlHandle" class="form-label">Url Handle:</label>
                <input type="text" class="form-control" id="urlHandle" asp-for="devLogPost.UrlHandle">
            </div> 
            <div class="mb-3">
                <label for="publishedDate" class="form-label">Published Date:</label>
                <input type="date" class="form-control" id="publishedDate" asp-for="devLogPost.PublishedDate">
            </div>
            <div class="mb-3">
                <label for="author" class="form-label">Author:</label>
                <input type="text" class="form-control" id="author" asp-for="devLogPost.Author">
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="Visible" asp-for="devLogPost.Visible">
                <label class="form-check-label" for="Visible">
                    Visible
                </label>
            </div>
            <div class="mb-3 d-flex justify-content-between">
                <button class="btn btn-primary" type="submit" asp-page-handler="Edit">Submit</button>

                <button class="btn btn-danger" type="submit" asp-page-handler="Delete" >Delete</button>
            </div>
        </form>
    </div>
</div>


}else{
    <div class="container">
        <p>Error: dev log not found</p>
    </div>
}