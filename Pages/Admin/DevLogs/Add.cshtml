@page
@model portfolio_web_app.Pages.Admin.DevLogs.AddModel
@{
}


<div class="bg-secondary bg-opacity-10 py-2 mb-5">

	<div class="container">

		<h1> Add Dev Log </h1>

        
      
	</div>

</div>

<div>
    <div class="container">
        <form method="post">
            <div class="mb-3">
                <label for="heading" class="form-label">Heading:</label>
                <input type="text" class="form-control" id="heading" asp-for="AddDevLogRequest.Heading">
            </div>
            <div class="mb-3">
                <label for="pageTitle" class="form-label">Page Title:</label>
                <input type="text" class="form-control" id="pageTitle" asp-for="AddDevLogRequest.PageTitle">
            </div>
            <div class="mb-3">
                <label for="pageContent" class="form-label">Content:</label>
                <textarea class="form-control" id="pageContent" asp-for="AddDevLogRequest.PageContent"></textarea>
            </div> 
            <div class="mb-3">
                <label for="shortDescription" class="form-label">Short Description:</label>
                <input type="text" class="form-control" id="shortDescription" asp-for="AddDevLogRequest.ShortDescription">
            </div>
            <div class="mb-3">
                <label for="featuredImage" class="form-label">Featured Image:</label>
                <input type="text" class="form-control" id="featuredImage" asp-for ="AddDevLogRequest.FeaturedImageUrl">
            </div>
            <div class="mb-3">
                <label for="urlHandle" class="form-label">Url Handle:</label>
                <input type="text" class="form-control" id="urlHandle" asp-for="AddDevLogRequest.UrlHandle">
            </div> 
            <div class="mb-3">
                <label for="publishedDate" class="form-label">Published Date:</label>
                <input type="date" class="form-control" id="publishedDate" asp-for="AddDevLogRequest.PublishedDate">
            </div>
            <div class="mb-3">
                <label for="author" class="form-label">Author:</label>
                <input type="text" class="form-control" id="author" asp-for="AddDevLogRequest.Author">
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="isVisible" asp-for="AddDevLogRequest.Visible">
                <label class="form-check-label" for="isVisible">
                    Visible
                </label>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

